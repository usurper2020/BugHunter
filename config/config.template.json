// config/config.template.json
{
    "ai_service": {
        "model": "gpt-4",
        "temperature": 0.7,
        "max_tokens": 2048,
        "api_key": "YOUR_API_KEY_HERE"
    },
    "nuclei": {
        "templates_path": "./nuclei-templates",
        "timeout": 30,
        "rate_limit": 150
    },
    "scanning": {
        "concurrent_scans": 5,
        "timeout": 300,
        "retries": 3
    },
    "logging": {
        "level": "INFO",
        "file": "logs/bughunter.log",
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    }
}